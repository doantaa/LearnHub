<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:paddingHorizontal="50dp"
    android:paddingVertical="30dp">

    <ImageView
        android:id="@+id/iv_empty_course"
        android:layout_width="150dp"

        android:layout_height="150dp"
        android:src="@drawable/img_empty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_empty_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintVertical_bias="0.45"
        android:text="@string/text_state_empty_title"
        android:textColor="@color/DARKBLUE05"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_empty_course"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_empty_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_empty_course"
        android:text="@string/text_empty_class"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/DARKBLUE05"
        app:layout_constraintTop_toBottomOf="@id/tv_empty_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>