<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:clickable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:focusable="true"
    android:padding="10dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_notification"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notification_blue" />

        <TextView
            android:id="@+id/text_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Promosi"
            android:fontFamily="@font/montserrat"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:textColor="@color/dark_blue" />

        <TextView
            android:id="@+id/text_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 maret, 12.00"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="11sp"
            android:textColor="#8A8A8A" />

        <ImageView
            android:id="@+id/img_read"
            android:layout_width="8dp"
            android:background="@drawable/ic_indikator1"
            android:layout_height="8dp"
            android:contentDescription="Notif Icon" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Dapatkan Potongan 50% selama Bulan Maret!"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="13sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Syarat dan Ketentuan berlaku!"
        android:fontFamily="@font/montserrat"
        android:textSize="13sp"
        android:textColor="#8A8A8A" />

</LinearLayout>
